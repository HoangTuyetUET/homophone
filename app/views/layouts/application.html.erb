<html>
<head>
  <%= render "meta/head" %>
  <%= stylesheet_link_tag("application", media: "all") %>

  <%= render "layouts/variables" %>
  <%= javascript_include_tag("application") %>

  <%= csrf_meta_tags %>
</head>
<body>
  <div id="fb-root"></div>

  <%= render "layouts/header" %>

  <div id="body-content">

    <%= render "layouts/notifications" %>

    <%= render "layouts/back_button" %>

