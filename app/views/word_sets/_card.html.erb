<div class="card">
  <div class="well well-lg">
    <% @word_set.words_matches_preceding(@query).each do |word| %>
      <button type="button" class="btn btn-default word-btn" data-container="body" data-toggle="popover" data-placement="top" data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus." data-original-title="" title=""><%= word.text %></button>
    <% end %>

    <div class="icon-container">
      <div class="btn-group">
        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown"><%= fa_icon("cog") %> <span class="caret"></span></button>
        <ul class="dropdown-menu dropdown-left" role="menu">
          <li><%= link_to fa_stacked_icon("info inverse", base: "square", class: "icon-success") + " Show", word_set_path(@word_set) -%></li>
          <li><%= link_to fa_stacked_icon("pencil inverse", base: "square", class: "icon-edit") + " Edit", edit_word_set_path(@word_set) -%></li>
          <li><%= link_to fa_stacked_icon("trash-o inverse", base: "square", class: "icon-delete") + " Delete", @word_set, method: :delete, data: { confirm: 'Are you sure?' } -%></li>
        </ul>
      </div>
    </div>
  </div>
</div>
